<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="business.MainController">
  <children>
    <MenuBar BorderPane.alignment="CENTER" VBox.vgrow="NEVER">
        <menus>
          <Menu mnemonicParsing="false" text="Librarian">
            <items>
              <MenuItem mnemonicParsing="false" text="Checkout Book" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Administrator">
            <items>
              <MenuItem mnemonicParsing="false" text="Add New Library Member" />
            </items>
            <items>
              <MenuItem mnemonicParsing="false" text="Add Book Copy" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="System">
            <items>
              <MenuItem mnemonicParsing="false" text="Exit" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
    <AnchorPane fx:id="viewHolder" VBox.vgrow="ALWAYS" />
  </children>
</VBox>
